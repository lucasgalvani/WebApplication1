@model List<Aluno>

<h1>Cadastro de Alunos</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Matricula</th>
            <th scope="col">Nome</th>
            <th scope="col">Cpf</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach(Aluno aluno in Model)
            {
                <tr>
                    <td>@aluno.Matricula</td>
                    <td>@aluno.Nome</td>
                    <td>@aluno.Cpf</td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-warning" role="button" asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                            <a type="submit" class="btn btn-danger" role="button" asp-controller="Aluno" asp-action="ApagarAluno" asp-route-id="@aluno.Id">Apagar</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="AdicionarAluno">Adicionar aluno</a>
    <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Index">Voltar</a>
</div>