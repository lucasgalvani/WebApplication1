@model List<Professor>

<h1>Professores</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Disciplina</th>
            <th scope="col">Data de nascimento</th>
            <th scope="col">Sala</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (Professor professor in Model)
            {
                <tr>
                    <td>@professor.Nome </td>
                    <td>@professor.Disciplina </td>
                    <td>@professor.DataNascimento </td>
                    <td>@professor.Sala </td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-warning" role="button" asp-controller="Professor" asp-action="Editar" asp-route-id="@professor.Id">Editar</a>
                            <a type="submit" class="btn btn-danger" role="button" asp-controller="Professor" asp-action="ApagarProfessor" asp-route-id="@professor.Id">Apagar</a>
                        </div>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Professor" asp-action="AdicionarProfessor"> Adicionar Professor</a>
</div>